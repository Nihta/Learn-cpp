{
  "tasks": [
    {
      "label": "Nihta run cpp",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "windows": {
        "command": "g++",
        "args": [
          "-g",
          "${relativeFile}",
          "--std=c++11",
          "-o",
          "${fileBasenameNoExtension}.exe",
          "&&",
          "cls",
          "&&",
          "cls",
          "&&",
          "${fileBasenameNoExtension}.exe"
        ]
      },
      "linux": {
        "command": "g++",
        "args": [
          "-g",
          "${relativeFile}",
          "--std=c++11",
          "-o",
          "${fileBasenameNoExtension}.out",
          "&&",
          "./${fileBasenameNoExtension}.out"
        ]
      },
      "osx": {
        "command": "g++",
        "args": [
          "-g",
          "${relativeFile}",
          "-lpthread",
          "--std=c++11",
          "-o",
          "${fileBasenameNoExtension}.out"
        ]
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
